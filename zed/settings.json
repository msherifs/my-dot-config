// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 11,
  "buffer_font_size": 12,
  "theme": {
    "mode": "system",
    "light": "Fleet Dark",
    "dark": "RosÃ© Pine Dawn"
  },
  "buffer_font_family": "Maple Mono NF", l
  "buffer_font_features": {
    "zero": true,
    "ss05": true,
    "cv02": true,
    "cv04": true
  },
  // \w \n i l a @ $ & % Q => ->
  "buffer_line_height": {
    "custom": 1.5
  },
  "relative_line_numbers": true,
  "terminal": {
    "font_size": 11,
    "font_family": "Maple Mono NF",
    "line_height": {
      "custom": 1.35
    },
    "font_features": {
      "zero": true,
      "ss05": true,
      "cv02": true,
      "cv04": true
    }
  },
  "features": {
    "inline_completion_provider": "supermaven"
  },
  "format_on_save": "off",
  "autosave": "on_focus_change",
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  }
}
