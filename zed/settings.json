// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "assistant": {
    "profiles": {
      "agent": {
        "name": "Agent",
        "tools": {
                    "thinking": false,
                    "terminal": true,
                    "symbol_info": true,
                    "rename": true,
                    "regex_search": true,
                    "read_file": true,
                    "path_search": true,
                    "open": true,
                    "now": true,
                    "move_path": true,
                    "list_directory": true,
                    "find_replace_file": true,
                    "fetch": true,
                    "diagnostics": true,
                    "delete_path": true,
                    "create_file": true,
                    "create_directory": true,
                    "copy_path": true,
                    "code_symbols": true,
                    "code_actions": true,
                    "batch_tool": true
                },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_profile": "agent",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "vim_mode": true,
  "ui_font_size": 10,
  "buffer_font_size": 12,
  "theme": "Github Dark",
  "buffer_font_family": "Maple Mono NF",
  "buffer_font_features": {
    "zero": true,
    "ss03": true,
    "ss05": true,
    "ss08": true,
    "cv02": true,
    "cv04": true
  },
  // \w \n i l a F f i @ $ & % Q => -> == =>>|> [todo]
  "buffer_line_height": {
    "custom": 1.55
  },
  "relative_line_numbers": true,
  "terminal": {
    "font_size": 12,
    "font_family": "Maple Mono NF",
    "font_features":{
      "zero": true,
      "ss03": true,
      "ss05": true,
      "ss08": true,
      "cv02": true,
      "cv04": true
    },
    "line_height": {
      "custom": 1.3
    },
    "dock": "right"
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "format_on_save": "off",
  "formatter": null,
  "autosave": "on_focus_change",
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "centered_layout": {
    "right_padding": 0.01,
    "left_padding": 0.05
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  }
}
